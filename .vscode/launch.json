    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/buildkit/build": "${workspaceRoot}/build"
            },
            "xdebugSettings": {
                "max_children": 100,
                "max_data": 100,
                "max_depth": 10
            }
        }
    ]
}

